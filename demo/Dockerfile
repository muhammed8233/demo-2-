# === BUILD STAGE ===
# Use the available Maven 4.0.0-rc-5 image with JDK 25 (Temurin 25 on Alpine)
FROM maven:4.0.0-rc-5-eclipse-temurin-25-alpine AS build

# Set the working directory inside the container for the build stage
WORKDIR /app

# Copy the pom.xml file first to allow Docker to cache dependency downloads
COPY pom.xml .

# Download dependencies in an isolated step
RUN mvn dependency:go-offline -B

# Copy the rest of the source code
COPY src ./src

# Compile and package the application into target/demo-0.0.1-SNAPSHOT.jar
RUN mvn clean package -Dmaven.test.skip=true

# === PACKAGE/RUN STAGE ===
# Start a new, minimal stage for the final runtime image using only JRE 25
FROM eclipse-temurin:25-jre-alpine

# Set the working directory for the runtime
WORKDIR /app

# Copy the specific JAR file name generated by your pom.xml
COPY --from=build /app/target/demo-0.0.1-SNAPSHOT.jar app.jar

# Expose the port your Spring Boot app runs on (default 8080)
EXPOSE 8080

# Define the command to run the application
ENTRYPOINT ["java", "-jar", "app.jar"]
